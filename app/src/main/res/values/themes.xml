<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SoSoMoneNote.NoActionBar" parent="Theme.SoSoMoneNote">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SoSoMoneNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/yuanbao_primary</item>
        <item name="colorPrimaryVariant">@color/yuanbao_primary_dark</item>
        <item name="colorSecondary">@color/yuanbao_secondary</item>

        <item name="android:colorBackground">@color/yuanbao_bg</item>
        <item name="android:textColorPrimary">@color/yuanbao_text_dark</item>

        <item name="actionBarTheme">@style/YuanBaoActionBar</item>
        <item name="android:statusBarColor">@color/yuanbao_primary_dark</item>

        <item name="materialButtonStyle">@style/YuanBaoButton</item>
    </style>

    <style name="YuanBaoActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/yuanbao_primary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="YuanBaoCard">
        <item name="android:background">@color/yuanbao_white</item>
        <item name="android:elevation">6dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:backgroundTint">@color/yuanbao_white</item>
        <item name="shapeAppearanceOverlay">@style/YuanBaoRound20</item>
    </style>

    <style name="YuanBaoIcon">
        <item name="android:tint">@color/yuanbao_accent_blue</item>
    </style>

    <style name="YuanBaoButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/yuanbao_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="shapeAppearanceOverlay">@style/YuanBaoRound20</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="YuanBaoRound20">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Theme.SoSoMoneNote.AppBarOverlay"
        parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.SoSoMoneNote.PopupOverlay"
        parent="ThemeOverlay.MaterialComponents.Light" />

</resources>
