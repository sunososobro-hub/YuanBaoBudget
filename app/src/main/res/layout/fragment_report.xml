<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F4E7D3"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ⭐ 可左右滑動的篩選列 -->
    <HorizontalScrollView
        android:id="@+id/filterScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingBottom="12dp">

        <LinearLayout
            android:id="@+id/filterBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/filterMonth"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDC9A5"
                android:paddingHorizontal="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvFilterNameMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11月"
                    android:textColor="#5E4A2C"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/filterType"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDC9A5"
                android:paddingHorizontal="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvFilterNameType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="類型"
                    android:textColor="#5E4A2C"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/filterCategory"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDC9A5"
                android:paddingHorizontal="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvFilterNameCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="類別"
                    android:textColor="#5E4A2C"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/filterAccountBook"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDC9A5"
                android:paddingHorizontal="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvFilterNameAccountBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帳本"
                    android:textColor="#5E4A2C"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/filterAccount"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDC9A5"
                android:paddingHorizontal="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvFilterNameAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帳戶"
                    android:textColor="#5E4A2C"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/filterTag"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDC9A5"
                android:paddingHorizontal="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvFilterNameTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="標籤"
                    android:textColor="#5E4A2C"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </HorizontalScrollView>


    <!-- ⭐ 下方報表列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewReport"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
