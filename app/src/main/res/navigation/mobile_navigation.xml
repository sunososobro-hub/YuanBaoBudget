<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_overview">

    <activity
        android:id="@+id/nav_budge"
        android:name="com.sosobro.sosomonenote.ui.budget.BudgetSettingActivity"
        android:label="預算"
        tools:layout="@layout/activity_budget_setting" />

    <activity
        android:id="@+id/nav_import_data"
        android:name="com.sosobro.sosomonenote.ui.importdata.ImportDataActivity"
        android:label="匯入"
