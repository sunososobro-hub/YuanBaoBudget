    <fragment
        android:id="@+id/nav_analysis"
        android:name="com.sosobro.sosomonenote.ui.analysis.AnalysisFragment"
        tools:layout="@layout/fragment_analysis" />

    <fragment
        android:id="@+id/nav_report"
        android:name="com.sosobro.sosomonenote.ui.report.ReportFragment"
        tools:layout="@layout/fragment_report" />

    <activity
